{% extends 'layout_admin.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('assets/lib/datatables-plugins/dataTables.bootstrap.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/lib/datatables-responsive/dataTables.responsive.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/datatable.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/admin/place/list.css') }}" rel="stylesheet">
{% endblock stylesheets %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                {{ 'Places list'|trans }}
                <a href="{{ path('admin_place_add') }}" class="btn btn-success pull-right place-add"><i class="fa fa-plus"></i> {{ 'Add'|trans }}</a>
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">{{ 'Places without owner'|trans }}</div>
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="places-new-list" data-url="{{ path('admin_place_new_refresh') }}">
                        <thead>
                            <tr>
                                <th width="25%">{{ 'Name'|trans }}</th>
                                <th width="25%">{{ 'Email'|trans }}</th>
                                <th width="30%">{{ 'Address'|trans }}</th>
                                <th width="20%"></th>
                            </tr>
                            <tr data-id="datatable-filters">
                                <th data-type="text">{{ 'Search name'|trans }}</th>
                                <th data-type="text">{{ 'Search email'|trans }}</th>
                                <th data-type="text">{{ 'Search address'|trans }}</th>
                                <th data-type="search"><i class="fa fa-search"></i> {{ 'Search'|trans }}</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">{{ 'Places'|trans }}</div>
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="places-list" data-url="{{ path('admin_place_refresh') }}">
                        <thead>
                        <tr>
                            <th width="25%">{{ 'Name'|trans }}</th>
                            <th width="25%">{{ 'Email'|trans }}</th>
                            <th width="30%">{{ 'Address'|trans }}</th>
                            <th width="20%"></th>
                        </tr>
                        <tr data-id="datatable-filters">
                            <th data-type="text">{{ 'Search name'|trans }}</th>
                            <th data-type="text">{{ 'Search email'|trans }}</th>
                            <th data-type="text">{{ 'Search address'|trans }}</th>
                            <th data-type="search"><i class="fa fa-search"></i> {{ 'Search'|trans }}</th>
                        </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/lib/datatables/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('assets/lib/datatables-plugins/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ asset('assets/lib/datatables-responsive/dataTables.responsive.js') }}"></script>
    <script src="{{ asset('assets/js/searchable-datatable.js') }}"></script>
    <script src="{{ asset('assets/js/admin/place/list.js') }}"></script>
{% endblock javascripts %}