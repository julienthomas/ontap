{% extends 'layout_admin.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('assets/lib/fullcalendar/fullcalendar.min.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/place/add_edit.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/beer/form.css') }}" rel="stylesheet">
{% endblock stylesheets %}

{% block title %}
    {% set title = isNew ? 'New place'|trans : 'Place edition'|trans %}
    {{ title }}
{% endblock title %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ 'Place edition'|trans }}</h1>
        </div>
    </div>
    {% include 'partial/place/form.html.twig' with {'mapMarker': asset('assets/img/map/marker.png'), 'cancelUrl': path('admin_place')} %}
    {% include 'partial/form_error_template.html.twig' %}
{% endblock body %}

{% block javascripts %}
    <script src="https://maps.googleapis.com/maps/api/js?v=3&key={{ google_api_key }}"></script>
    <script src="{{ asset('assets/lib/fullcalendar/lib/moment.min.js') }}"></script>
    <script src="{{ asset('assets/lib/fullcalendar/fullcalendar.js') }}"></script>
    <script src="{{ asset('assets/lib/fullcalendar/locale/fr.js') }}"></script>
    <script src="{{ asset('assets/js/utils.js') }}"></script>
    <script src="{{ asset('assets/js/place/add_edit.js') }}"></script>
    <script src="{{ asset('assets/js/beer/form.js') }}"></script>
{% endblock javascripts %}