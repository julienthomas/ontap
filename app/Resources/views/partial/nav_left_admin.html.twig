{% set route = app.request.attributes.get('_route') %}

<li>
    <a href="{{ path('admin_home') }}" {% if route matches '/^admin_home$/' %}class="active"{% endif %}>
        <i class="fa fa-dashboard fa-fw"></i> {{ 'Dashboard'|trans }}
    </a>
</li>
<li>
    <a href="#" {% if route matches '/^admin_place/' %}class="active"{% endif %}>
